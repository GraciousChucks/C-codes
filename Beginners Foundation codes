//This program takes two integers as input and uses the add function to compute their sum
#include <iostream>

using namespace std;

int add(int a, int b) {
  return a + b;
}

int main() {
  int num1, num2;
  cout << "Enter first number: ";
  cin >> num1;
  cout << "Enter second number: ";
  cin >> num2;
  int sum = add(num1, num2);
  cout << "The sum is " << sum << endl;
  return 0;
}



//This program demonstrates the use of the increment (++) and decrement (--) operators to increase or decrease the value of a variable.

#include <iostream>
using namespace std;

int main() {
int count = 5;

   cout << "count = " << count << endl;
   count++; // equivalent to count = count + 1
   cout << "count after increment: " << count << endl;

   count--; // equivalent to count = count - 1
   cout << "count after decrement: " << count << endl;

   return 0;
}

